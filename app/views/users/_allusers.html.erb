<h1>Yakety Users</h1>

<% @users.each do |user| %>
	<p><%= user.first_name %> <%= user.last_name %></p>
	<% if current_user.following?(user) %>
		<%= link_to "unfollow", relationship_path(:id => user.id), method: :delete, remote: true %>	
	<% else %>	
		<%= link_to "follow", relationships_path(:id => user.id), :action => 'create', method: :post, remote: true %>
	<% end %>
<% end %>




